<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:id="@+id/findlinearlayout"
    android:layout_height="108dp">
    <RelativeLayout
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/findimage"
            app:roundAsCircle="true"
            android:layout_margin="4dp"
            app:roundingBorderWidth="1dp"
            android:layout_centerVertical="true"
            app:roundingBorderColor="@color/hockeyapp_background_header"
            android:layout_width="52dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/findtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11111"
            android:textSize="18sp"
            android:textColor="@color/hockeyapp_text_black"
            android:layout_toRightOf="@+id/findimage"
            android:layout_marginLeft="8dp"

            />
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/hockeyapp_text_normal"
            android:layout_toRightOf="@+id/findimage"
            android:layout_below="@+id/findtext"
            android:layout_margin="8dp"
            />
        <ImageView
            android:id="@+id/findjoin"
            android:layout_margin="8dp"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
        <TextView
            android:id="@+id/findcontenxt"
            android:layout_marginLeft="75dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="@color/hockeyapp_text_normal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:text="11"
            android:maxLines="2"
            android:textSize="14sp"
           />
</LinearLayout>